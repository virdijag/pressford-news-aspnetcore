@model HomeViewModel
<div class="d-flex container justify-content-center">
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="card">
                <div class="card-header">
                    @article.Title
                </div>
                <div class="card-body">
                    @*<h5 class="card-title">@article.Title</h5>*@
                    <p class="card-text article">@article.Body</p>
                    <a class="btn btn-primary" asp-controller="App" asp-action="Article" asp-route-id="@article.Id">View</a>
                </div>
            </div>
        }
    </div>
</div>